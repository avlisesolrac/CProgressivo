# include <stdio.h>
# include <stdlib.h>

int main (void) {
	int n, aux;
	
	printf("Digite um 'n' qualquer: ");
	scanf("%i", &n);

	do{
		if(n % 2 == 0){
			n = n / 2;
			printf("%i ", n);
		} else {
			n = 3 * n + 1;
			printf("%i ", n);
		}
	}while(n != 1);
	
	printf("\n\n");
	
	system("pause");
	return 0;
}

# include <stdio.h>
# include <stdlib.h>

int soma (int a, int b){
    int c;
    c = a + b;
    return c;
}

int main (void) {
    int num, num2, result;
    
    printf("#####\tPrograma que soma dois numeros\t#####\n\n");
    
    printf("Digite o primeiro numero -> ");
    scanf("%i", &num);
    
    printf("\nDigite o segundo numero -> ");
    scanf("%i", &num2);
    
    result = soma(num, num2);
    
    printf("\nA soma resultou em -> %i.\n\n", result);
    
    system("pause");
    return 0;
}
